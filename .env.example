# Environment Variables Configuration
# Copy this file to .env and fill in your values

# ==================================================
# REQUIRED SETTINGS
# ==================================================

# MongoDB Connection String
# For local development: mongodb://localhost:27017/duel-dev
# For production: mongodb+srv://username:password@cluster.mongodb.net/duel-prod
MONGODB_URI=mongodb://localhost:27017/duel-dev

# Application Port
PORT=3000

# Node Environment
NODE_ENV=development

# ==================================================
# OPTIONAL SETTINGS
# ==================================================

# ETL Configuration
DATA_DIR=data/
BATCH_SIZE=1000
MAX_FILES=100
CLEAN_DATABASE=false

# Logging
LOG_LEVEL=info

# ==================================================
# CI/CD SECRETS (GitHub Repository Settings)
# ==================================================
#
# These are NOT set in .env files but as GitHub Secrets:
#
# MONGODB_URI_CI - MongoDB URI for CI testing (e.g., mongodb://localhost:27017/test)
# DOCKER_USERNAME - Docker Hub username  
# DOCKER_PASSWORD - Docker Hub password/token
#
# Set these in: GitHub Repo → Settings → Secrets and variables → Actions
